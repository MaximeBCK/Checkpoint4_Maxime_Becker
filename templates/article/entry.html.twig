{% extends "base.html.twig" %}
{% block title %}App:article:entry{% endblock %}
{% block body %}
    {% include "nav_bar.html.twig" %}
<br>
    <div class="container">
        <div class="blog-header text-center">
            <h1 class="blog-title">Bloggify me</h1>
            <p class="lead blog-description">A basic site used to show your best articles !</p>
        </div>
        <div class="row">
            <div class="col-sm-8 blog-main">
                <div class="blog-post">
                    <h2 class="blog-post-title">{{ articlePost.title }}</h2>
                    <p class="blog-post-meta">
                        {{ articlePost.updatedAt|date('F j, Y') }} by <a href="{{ path('author', {'name': articlePost.author.username|url_encode }) }}">
                            {{ articlePost.author.name }}
                        </a>
                    </p>
                    <h3>Description:</h3>
                    <p>{{ articlePost.description|raw }}</p>
                    <h3>Body:</h3>
                    <p>{{ articlePost.body|raw }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}