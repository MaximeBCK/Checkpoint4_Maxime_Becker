{% extends "base.html.twig" %}
{% block title %}App:article:author{% endblock %}
{% block body %}
    {% include "nav_bar.html.twig" %}
    <br>
    <div class="container">
        <div class="blog-header">
            <h1 class="blog-title">Auteur</h1>
            <p class="lead blog-description">Coup d'oeil aux oeuvres de l'auteur</p>
        </div>
        <div class="row">
            <div class="col-sm-8 blog-main">
                <div class="blog-post">
                    <h2 class="blog-post-title">{{ author.name|raw }}</h2>
                    <p>Titre: {{ author.title|raw }}</p>
                    <p>Entreprise: {{ author.company|raw }}</p>
                    <p>Courte Biography: <br>{{ author.shortBio|raw }}</p>
                    <ul>
                        <AmpContent>

                            <li>{{ author.phone }}</li>

                            </NonAmpContent>
                            <AmpContent>
                                <li>
                                    <a href="{{ author.facebook }}"> {{ author.facebook }}
                                    </a>
                                </li>

                                </NonAmpContent>
                                <AmpContent>
                                    <li>{{ author.twitter }}</li>

                                    </NonAmpContent>
                                    <AmpContent>
                                        <li>
                                            <a href="{{ author.github }}">
                                                {{ author.github }}
                                            </a>
                                        </li>

                                        </NonAmpContent>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}