{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
    {% include "nav_bar.html.twig" %}
    <br>
    <div class="container">
        <div class="blog-header">
            <h1 class="blog-title">Profil de {{ author.name }}</h1>
            <p class="lead blog-description"></p>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12 col-xl-12">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
            <div class="col-md-12 col-lg-12 col-xl-12">
                <a type="button" href="{{ path('author_edit', {'id': author.id}) }}" class="btn btn-primary pull-right" style="margin-left: 15px">Modifie ton profil</a>
                <a type="button" href="{{ path('admin_create_entry') }}" class="btn btn-primary pull-right">Add Entry</a>
            </div>
            <div class="col-sm-12 blog-main">
                <table class="table table-striped">
                    <thead>
                    <th>Title</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Action</th>
                    </thead>
                    {% for articlePost in articlePosts %}
                    <tr>
                        <td>{{ articlePost.title }}</td>
                        <td>{{ articlePost.createdAt|date('F j, Y') }}</td>
                        <td>{{ articlePost.updatedAt|date('F j, Y') }}</td>
                        <td><a class="btn btn-danger" href="{{ path('admin_delete_entry', {'entryId': articlePost.id}) }}">Delete</a></td>
                    </tr>

                    </AmpContent>

                    <NonAmpContent>

                        <tr>
                            <td colspan="5">No entries available</td>
                        </tr>
                        {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}